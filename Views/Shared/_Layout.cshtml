@using AspNetCore_MVC_Project.Data
@using AspNetCore_MVC_Project.Models
@using AspNetCore_MVC_Project.Models.Control
@using Microsoft.AspNetCore.Identity
@using System.Linq

<!-- Внедрение зависимостей для управления пользователями и работы с БД -->
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext DbContext

@{
    // 1 ВАРИАНТ (определяем доступ здесь и сейчас)
    // Получаем текущего пользователя
    var user = await UserManager.GetUserAsync(User);

    // Определяем список доступных модулей для текущего пользователя.
    // Теперь формируем коллекцию объектов, где для каждого модуля сохраняются:
    // - Controller: имя контроллера, полученное через OptionBlock
    // - Area: имя области, полученное через OptionBlock (если оно задано)
    var userModules = user != null
        ? DbContext.Purchases
            .Where(b => b.FactoryId == user.FactoryId)
            .Select(b => (dynamic)new
            {
                Controller = b.OptionBlock.NameController,
                Area = b.OptionBlock.NameArea
            })
            .ToList()
        : new List<dynamic>(); // Если пользователь не авторизован, создаем пустой список

    // 2 ВАРИАНТ (получаем заранее подготовленный список разрешенных модулей, включающий и область)
    // Пытаемся получить список разрешенных модулей, который устанавливается в Middleware.
    // Предполагается, что ModuleAuthorizationMiddleware сохраняет список объектов с полями Controller и Area.
    var allowedModules = Context.Items["AllowedControllers"] as IEnumerable<dynamic>
                         ?? new List<dynamic> {
                             new { Controller = "Home", Area = (string)null },
                             new { Controller = "Account", Area = (string)null },
                             new { Controller = (string)null, Area = "BOX" },
                             new { Controller = (string)null, Area = "CUBE" }
                                 };
    var next = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetCore_MVC_Project</title>

    <!-- Подключение Bootstrap 5 для стилизации -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <!-- Навигационная панель (Navbar) -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <!-- Логотип и главная ссылка -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">AspNetCore MVC</a>

                <!-- Кнопка для раскрытия меню на мобильных устройствах -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Основное меню навигации -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <!-- 1 ВАРИАНТ -->
                        <!-- Проверяем, есть ли у пользователя доступ к модулю "Business" по списку, полученному напрямую из БД -->
                        @if (userModules.Any(m => string.Equals(m.Controller, "Business", System.StringComparison.OrdinalIgnoreCase)))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Business" asp-action="Index">Business</a>
                            </li>
                        }

                        <!-- Проверяем, есть ли у пользователя доступ к модулю "KPI" -->
                        @if (userModules.Any(m => string.Equals(m.Controller, "KPI", System.StringComparison.OrdinalIgnoreCase)))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="KPI" asp-action="Index">KPI</a>
                            </li>
                        }

                        <!-- 2 ВАРИАНТ -->
                        <!-- Ссылки для области BOX -->
                        @if (allowedModules.Any(m => (string.Equals(m.Controller, "Market", System.StringComparison.OrdinalIgnoreCase) || true)
                        && string.Equals(m.Area, "BOX", System.StringComparison.OrdinalIgnoreCase)))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Market (BOX)", "Index", "Market", new { area = "BOX" }, new { @class = "nav-link" })
                            </li>
                        }
                        <!-- Ссылки для области CUBE -->
                        @if (allowedModules.Any(m => (string.Equals(m.Controller, "Warehouse", System.StringComparison.OrdinalIgnoreCase) || true)
                        && string.Equals(m.Area, "CUBE", System.StringComparison.OrdinalIgnoreCase)))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Warehouse (CUBE)", "Index", "Warehouse", new { area = "CUBE" }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>

                    <!-- Кнопка "Настроить доступ" видна только авторизованным пользователям -->
                    @if (user != null)
                    {
                        <ul class="navbar-nav">
                            <a asp-controller="Admin" asp-action="ManageOptions" asp-route-factoryId="@user.FactoryId"
                               class="btn btn-outline-primary nav-link">Настроить доступ</a>
                        </ul>
                    }

                    <!-- Правый блок навигации с кнопками входа/регистрации -->
                    <ul class="navbar-nav ms-auto">
                        <partial name="_LoginPartial" /> <!-- Подключаем _LoginPartial.cshtml для отображения кнопок входа и выхода -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Основной контейнер, в котором рендерится контент страниц -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Футер (подвал страницы) -->
    <footer class="border-top footer text-muted text-center mt-4">
        <div class="container">
            &copy; 2024 - AspNetCore_MVC_Project 123
        </div>
    </footer>

    <!-- Подключение скриптов Bootstrap 5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
